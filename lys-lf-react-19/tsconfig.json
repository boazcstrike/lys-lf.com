{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "jsxImportSource": "react",
    // Module Resolution
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Path Aliases (match next.config.js)
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // Strict Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    // Emit Configuration
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./out-tsc",
    // Interop Constraints
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    // Skip Lib Check (Next.js recommendation)
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist"
  ]
}
